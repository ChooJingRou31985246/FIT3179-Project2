{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "hconcat": [
    {
      "width": 300,
      "height": 300,
      "data": {
        "url": "https://raw.githubusercontent.com/ChooJingRou31985246/FIT3179-Project2/main/Source/Sector.csv"
      },
      "encoding": {
        "theta": {"field": "Share of global greenhouse gas emissions (%)", "type": "quantitative", "stack": true},
        "color": {
          "field": "Sector",
          "type": "nominal",
          "legend": null,
          "scale": {
            "domain": [
              "Energy",
              "Industry",
              "Waste",
              "Agriculture, Forestry & Land Use"
            ],
            "range": [
              "#bc4b51",
              "#5b8e7d",
              "#f4a259",
              "#f4e285"
            ]
          }
        },
        "tooltip": [
          {"field": "Sector", "type": "nominal"},
          {"field": "Share of global greenhouse gas emissions (%)", "type": "quantitative", "format": ".2%" }
        ]
      },
      "layer": [
        {
          "mark": {
            "type": "arc",
            "outerRadius": 130}
        },
        {
        "mark": 
        {
          "type": "text",
          "align": "center",
          "radius": 140,
          "fontSize": 12,
          "fontStyle": "italic",
          "dx": 4},
        "encoding": {
          "text": {"field": "Sector", "type": "nominal"},
          "color":{"value": "black"}
        }
      }]
    },
    {
      "width": 300,
      "height": 300,
      "data": {
        "url": "https://raw.githubusercontent.com/ChooJingRou31985246/FIT3179-Project2/main/Source/Subsector.csv"
      },
      "params": [
        {
          "name": "highlight",
          "select": {"type": "point", "on": "mouseover"}
        },
        {"name": "select", "select": "point"}
      ],
      "transform": [
        {
          "window": [{
          "op": "rank",
          "as": "rank"
          }],
          "sort": [{ "field": "score", "order": "descending" }]
        },
        {
          "filter": "datum.rank <= 10"
        }
      ],
      "mark": 
        {
        "type": "bar",
        "stroke": "darkgrey",
        "cursor": "pointer"
        },
      "encoding": {
        "x": {
            "field": "Share of global greenhouse gas emissions (%)",
            "type": "quantitative",
            "title": "Share of GHG emissions (%)"
        },
        "y": {
            "field": "Sub-sector",
            "type": "nominal",
            "sort": {"field": "Share of global greenhouse gas emissions (%)", "op": "average", "order":"descending"}
        },
        "color": {
          "field": "Category",
          "type": "nominal",
          "legend": null,
          "scale": {
            "domain": [
              "Energy",
              "Industry",
              "Waste",
              "Agriculture, Forestry & Land Use"
            ],
            "range": [
              "#bc4b51",
              "#5b8e7d",
              "#f4a259",
              "#f4e285"
            ]
          }
        },
        "fillOpacity": {
            "condition": {"param": "select", "value": 1},
            "value": 0.3
        },
        "strokeWidth": {
            "condition": [
                {
                "param": "select",
                "empty": false,
                "value": 2
                },
                {
                "param": "highlight",
                "empty": false,
                "value": 1
                }
            ],
            "value": 0
          },
        "tooltip": [
            {"field": "Sub-sector", "type": "nominal"},
            {"field": "Share of global greenhouse gas emissions (%)", "type": "quantitative", "format": ".2%" }
        ]
      },
      "config": {
        "scale": {
          "bandPaddingInner": 0.2
        }
      }
    }
  ]
}